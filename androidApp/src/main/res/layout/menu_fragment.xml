<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:padding="@dimen/menu_content_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/create_encounter_button"
            style="@style/AppTheme.LargeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_encounter_button_title" />

        <Button
            android:id="@+id/join_encounter_button"
            style="@style/AppTheme.LargeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/menu_second_button_top_margin"
            android:text="@string/join_encounter_button_title" />

    </LinearLayout>
</FrameLayout>